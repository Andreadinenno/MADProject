<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/show_profile_toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/imageViewEditButton"
        android:layout_width="@dimen/editShowIcon_w"
        android:layout_height="@dimen/editShowIcon_h"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="18dp"
        android:elevation="20dp"
        android:src="@drawable/ic_mode_edit_black_24dp"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/show_profile_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageViewShow"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="61dp"
                android:layout_marginTop="21dp"
                app:civ_border_color="@color/colorToolBar"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/nameSurnameShow"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_alignParentTop="true"
                android:layout_marginEnd="39dp"
                android:layout_marginTop="51dp"
                android:ems="20"
                android:gravity="start"
                android:labelFor="@+id/nameSurnameShow"
                android:padding="8dp"
                android:text="@string/name_surname"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cityShow"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/nameSurnameShow"
                android:layout_centerVertical="true"
                android:ems="10"
                android:gravity="start"
                android:labelFor="@+id/cityShow"
                android:padding="8dp"
                android:text="@string/city"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/imageViewShow"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="18dp"

                android:background="@drawable/show_profile_main_info_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/showProfileBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:textSize="13sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>