<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/appToolbar"
        popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBar_h"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />


    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:text="@string/app_name"
        android:textColor="@color/textIcons"
        android:textSize="26sp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:elevation="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:onClick="showPopup"/>


    <android.support.design.widget.TabLayout
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textIcons"
        app:tabTextColor="@color/textIcons"
        app:tabSelectedTextColor="@android:color/holo_orange_dark"
        app:tabIndicatorColor = "@android:color/holo_orange_dark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabs_h"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tabLayout">

       <!-- <android.support.design.widget.TabItem
            android:text="@string/home"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <android.support.design.widget.TabItem
            android:text="@string/wishlist"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            /> !-->

        <android.support.design.widget.TabItem
            android:id="@+id/toolbarProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_books" />

        <android.support.design.widget.TabItem
            android:id="@+id/toolbarAddBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_book" />

    </android.support.design.widget.TabLayout>

</RelativeLayout>