<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/appToolbar"
        popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBar_h"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0d47a1"
        android:elevation="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        android:elevation="10dp"
        android:text="@string/app_name"
        android:textColor="@color/textIcons"
        android:textSize="26sp"
        android:layout_marginStart="20dp" />

    <ImageButton
        android:id="@+id/sign_out_button"
        android:layout_width="@dimen/editShowIcon_w"
        android:layout_height="@dimen/editShowIcon_h"
        android:layout_alignBaseline="@id/appToolbar"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:elevation="20dp"
        android:src="@drawable/ic_clear_red_24dp"
        android:visibility="visible" />


    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabs_h"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark"
        android:elevation="10dp"
        android:textColor="@color/textIcons"
        app:tabTextColor="@color/textIcons"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabSelectedTextColor="@color/colorAccent">

        <!-- <android.support.design.widget.TabItem
            android:text="@string/home"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <android.support.design.widget.TabItem
            android:text="@string/wishlist"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            /> !-->

        <android.support.design.widget.TabItem
            android:id="@+id/toolbarProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile" />

        <android.support.design.widget.TabItem
            android:id="@+id/toolbarAddBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AddBook" />


    </android.support.design.widget.TabLayout>

</RelativeLayout>