<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/show_profile_toolbar"
        layout="@layout/toolbar" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorToolBar"
        android:id="@+id/imageViewShow"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="140dp" />


    <ImageView
        android:id="@+id/imageViewEditButton"
        android:layout_width="@dimen/editShowIcon_w"
        android:layout_height="@dimen/editShowIcon_h"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="19dp"
        android:elevation="20dp"
        android:src="@drawable/ic_mode_edit_black_24dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/nameSurnameShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewShow"
        android:layout_toEndOf="@+id/imageViewShow"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="160dp"
        android:ems="20"
        android:labelFor="@+id/nameSurnameShow"
        android:padding="8dp"
        android:text="@string/name_surname"
        android:textSize="17sp"
        android:textAlignment="textStart"
        android:gravity="start"
        android:background="@drawable/show_profile_main_info_background"/>

    <TextView
        android:id="@+id/cityShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameSurnameShow"
        android:layout_alignLeft="@id/nameSurnameShow"
        android:layout_below="@+id/nameSurnameShow"
        android:layout_marginTop="15dp"
        android:layout_marginRight="11dp"
        android:ems="10"
        android:text="@string/city"
        android:textSize="17sp"
        android:textAlignment="textStart"
        android:gravity="start"
        android:labelFor="@+id/cityShow"
        android:padding="8dp"
        android:background="@drawable/show_profile_main_info_background"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/imageViewShow"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bio_label_show"
            android:textSize="25sp"
            android:textColor="@color/colorToolBar"
            />

        <TextView
            android:background="@drawable/show_profile_main_info_background"
            android:id="@+id/showProfileBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textSize="15sp"
            android:padding="15dp"
            />
    </LinearLayout>


</RelativeLayout>