<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/toolbar" android:id="@+id/show_profile_toolbar"
        />


    <ImageView
        android:id="@+id/imageViewShow"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/profile_image_border"
        android:contentDescription="@string/app_name"
        android:labelFor="@id/imageViewShow" />

    <TextView
        android:id="@+id/nameSurnameShow"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="167dp"
        android:ems="10"
        android:labelFor="@+id/nameSurnameShow"
        android:padding="8dp" />

    <TextView
        android:id="@+id/emailShow"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nameSurnameShow"
        android:layout_alignLeft="@id/nameSurnameShow"
        android:layout_marginTop="226dp"
        android:ems="10"
        android:labelFor="@+id/emailShow"
        android:padding="8dp" />

</RelativeLayout>