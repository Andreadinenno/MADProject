<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="95dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/fb_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/google_sign_in_button"
        android:layout_marginEnd="60dp" />

    <RelativeLayout
        android:id="@+id/login_form_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_below="@id/google_sign_in_button">

        <TextView
            android:id="@+id/login_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:textColor="@android:color/holo_red_dark"
            android:labelFor="@id/login_error"
            android:padding="8dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="@drawable/my_border"
            android:ems="10"
            android:hint="@string/email"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:labelFor="@id/emailEdit"
            android:maxLength="30"
            android:padding="8dp" />

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/login_email"
            android:layout_marginTop="25dp"
            android:background="@drawable/my_border"
            android:ems="10"
            android:hint="@string/pwd"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:labelFor="@id/login_pwd"
            android:maxLength="30"
            android:padding="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_below="@id/login_pwd"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>