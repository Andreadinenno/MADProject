<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar" android:id="@+id/edit_profile_toolbar"
        />

    <ImageView
        android:id="@+id/imageViewEdit"
        android:layout_width="@dimen/profileImage_w"
        android:layout_height="@dimen/profileImage_h"
        android:layout_below="@+id/edit_profile_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/profile_image_border"
        android:contentDescription="@string/app_name"
        android:labelFor="@id/imageViewEdit" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/surnameEdit"
        android:layout_alignEnd="@+id/imageViewEdit"
        android:layout_alignRight="@+id/imageViewEdit"
        android:layout_marginBottom="70dp"
        android:background="@drawable/camera_border"
        android:elevation="20dp"
        android:padding="20dp"
        android:src="@drawable/ic_photo_camera_black_24dp" />


    <EditText
        android:id="@+id/nameEdit"
        android:labelFor="@+id/nameEdit"
        android:layout_width="@dimen/input_w"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imageViewEdit"
        android:layout_centerVertical="true"
        android:inputType="textPersonName"
        android:background="@drawable/my_border"
        android:ems="10"
        android:hint="Name"/>

    <EditText
        android:id="@+id/surnameEdit"
        android:labelFor="@+id/nameEdit"
        android:layout_width="@dimen/input_w"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:layout_below="@+id/nameEdit"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/my_border"
        android:hint="Surname"/>

    <EditText
        android:id="@+id/emailEdit"
        android:labelFor="@+id/emailEdit"
        android:layout_width="@dimen/input_w"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surnameEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/my_border"
        android:hint="E-Mail"/>

    <EditText
        android:id="@+id/bioEdit"
        android:labelFor="@id/bioEdit"
        android:layout_width="@dimen/input_w"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailEdit"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="@drawable/my_border"
        android:hint="Bio" />

</RelativeLayout>







