<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar" android:id="@+id/edit_profile_toolbar"/>

    <ImageView
        android:id="@+id/showProfileIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="18dp"
        android:elevation="20dp"
        android:src="@drawable/ic_person_black_24dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageViewEdit"
        android:layout_width="@dimen/profileImage_w"
        android:layout_height="@dimen/profileImage_h"
        android:layout_below="@+id/edit_profile_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/profile_image_border"
        android:contentDescription="@string/app_name"
        android:labelFor="@id/imageViewEdit" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageViewEdit"
        android:layout_alignRight="@id/imageViewEdit"
        android:layout_alignParentTop="true"
        android:layout_marginTop="245dp"
        android:background="@drawable/camera_border"
        android:elevation="20dp"
        android:padding="20dp"
        android:src="@drawable/ic_photo_camera_black_24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:layout_below="@+id/imageViewEdit">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">



            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/my_border"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:labelFor="@+id/nameEdit"
                android:padding="8dp" />


            <EditText
                android:id="@+id/surnameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameEdit"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/my_border"
                android:ems="10"
                android:hint="@string/surname"
                android:inputType="textPersonName"
                android:labelFor="@+id/nameEdit"
                android:padding="8dp" />



            <EditText
                android:id="@+id/cityEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bioEdit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/my_border"
                android:ems="10"
                android:hint="@string/city"
                android:inputType="text"
                android:labelFor="@id/cityEdit"
                android:padding="8dp" />

            <EditText
                android:id="@+id/emailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/surnameEdit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/my_border"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:labelFor="@+id/emailEdit"
                android:padding="8dp" />

            <EditText
                android:id="@+id/bioEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailEdit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/my_border"
                android:ems="10"
                android:hint="@string/bio"
                android:inputType="textMultiLine"
                android:labelFor="@id/bioEdit"
                android:padding="8dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>







