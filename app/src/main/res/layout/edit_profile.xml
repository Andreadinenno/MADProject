<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar" android:id="@+id/edit_profile_toolbar"/>

    <ImageView
        android:id="@+id/showProfileIcon"
        android:layout_width="@dimen/editShowIcon_w"
        android:layout_height="@dimen/editShowIcon_h"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="18dp"
        android:elevation="20dp"
        android:src="@drawable/ic_person_black_24dp"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_profile_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorToolBar"
                android:id="@+id/imageViewEdit"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_person_black_24dp" />

            <ImageView
                android:id="@+id/imageViewEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageViewEdit"
                android:layout_alignRight="@+id/imageViewEdit"
                android:layout_alignParentTop="true"
                android:layout_marginTop="141dp"
                android:background="@drawable/camera_border"
                android:elevation="20dp"
                android:padding="20dp"
                android:src="@drawable/ic_photo_camera_black_24dp" />

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="@dimen/input_w"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewEdit"
                android:background="@drawable/my_border"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:labelFor="@+id/nameEdit"
                android:padding="8dp" />

            <EditText
                android:id="@+id/surnameEdit"
                android:layout_width="@dimen/input_w"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameEdit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/my_border"
                android:ems="10"
                android:hint="@string/surname"
                android:inputType="textPersonName"
                android:labelFor="@+id/surnameEdit"
                android:padding="8dp" />

            <EditText
                android:id="@+id/cityEdit"
                android:layout_height="match_parent"
                android:layout_width="@dimen/input_w"
                android:layout_below="@+id/surnameEdit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/my_border"
                android:ems="10"
                android:hint="@string/city"
                android:inputType="text"
                android:labelFor="@id/cityEdit"
                android:padding="8dp" />

            <EditText
                android:id="@+id/emailEdit"
                android:layout_width="@dimen/input_w"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cityEdit"
                android:layout_centerHorizontal="true"
                android:background="@drawable/my_border"
                android:ems="10"
                android:layout_marginTop="15dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:labelFor="@id/emailEdit"
                android:padding="8dp" />

            <EditText
                android:id="@+id/bioEdit"
                android:layout_width="@dimen/input_w"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailEdit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="75dp"
                android:background="@drawable/my_border"
                android:ems="10"
                android:hint="@string/bio"
                android:inputType="textMultiLine"
                android:labelFor="@id/bioEdit"
                android:padding="8dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>







