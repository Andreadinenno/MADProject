<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <include
        android:id="@+id/addBookAutomatic"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBookAutomatic"
        android:layout_below="@id/addBookAutomatic">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayoutISBN"
                android:layout_width="368dp"
                android:layout_height="106dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="#1976d2"
                android:elevation="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/editISBN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/takePhotoISBNButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scanOrManualString" />

                <ImageButton
                    android:id="@+id/takePhotoISBNButton"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/take_photo_isbn_button"
                    android:elevation="25dp"
                    android:src="@drawable/ic_photo_camera_black_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/editISBN"
                    app:layout_constraintTop_toBottomOf="@+id/scanOrManualString" />

                <TextView
                    android:id="@+id/scanOrManualString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:text="@string/automatic_or_manual_ISBN"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/gotoManualButton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/take_photo_isbn_button"
                android:elevation="15dp"

                android:onClick="goToManualButtonClick"
                android:text="@string/add_manual_button"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constrResume"
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/titleString"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/title_textV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/titleStringValue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:textAlignment="center"
            android:hint="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="8dp"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/authorString"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/author_textV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleString" />

        <TextView
            android:id="@+id/authorStringValue"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="8dp"
            android:hint="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:ellipsize="marquee"
            app:layout_constraintTop_toBottomOf="@+id/titleStringValue" />

        <TextView
            android:id="@+id/editorString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:text="@string/publisher_textV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authorString" />

        <TextView
            android:id="@+id/editorStringValue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="8dp"
            android:hint="TextView"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:ellipsize="marquee"
            app:layout_constraintTop_toBottomOf="@+id/authorStringValue" />

        <TextView
            android:id="@+id/editionYearString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:text="@string/year_textV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editorString" />

        <TextView
            android:id="@+id/editionYearStringValue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="8dp"
            android:hint="TextView"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:ellipsize="marquee"
            app:layout_constraintTop_toBottomOf="@+id/editorStringValue" />

        <TextView
            android:id="@+id/conditionString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:text="@string/conditions_textV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editionYearString" />

        <TextView
            android:id="@+id/conditionStringValue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:hint="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:ellipsize="marquee"
            app:layout_constraintTop_toBottomOf="@+id/editionYearStringValue" />
    </android.support.constraint.ConstraintLayout>

    <GridView
        android:id="@+id/bookPhotoGrid"
        android:layout_width="368dp"
        android:layout_height="184dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</RelativeLayout>